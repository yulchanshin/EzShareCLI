  "homepage": "https://github.com/yulchanshin/ezsharecli#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "hyperswarm": "^4.16.0",
    "ink": "^6.6.0",
    "meow": "^14.0.0",
    "pump": "^3.0.3",
    "simple-zstd": "^2.0.0",
    "tar-stream": "^3.1.7"
